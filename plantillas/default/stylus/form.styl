.frm_validate
    &.vertical
    label
        display block
        float none
        line-height 22px
        &.ioption
            float left
            font-size 16px
            margin-left 0px
            &:first-child
                margin 0
            &.ck
                padding-right 20px
        input[type="text"],input[type="email"],input[type="tel"],input[type="url"],input[type="password"],input[type="search"],input[type="time"]
            width 340px
        textarea
            width 340px
        .btn
            margin 0
    &.lesslabel
        label
            display none
            &.ioption
                display block
                font-size 16px
                line-height 18px
                margin-left 60px
                width 80px
                input[type="radio"]
                    top 4px
                &:first-child
                    margin 0
                &.ck
                    padding-right 20px
        input[type="text"],input[type="email"],input[type="tel"],input[type="url"],input[type="password"],input[type="search"],input[type="time"]
            width 340px
        textarea
            width 340px
        .btn
            margin 0
.form_control
    margin-bottom 2px
    margin-top 2px
    padding 5px
    text-align center
    *zoom 1
    &:before,&:after
        display table
        content ""
        line-height 0
    &:after
        clear both
    &:hover
        background: rgba(255, 165, 0, 0.27)
    label
        margin 0
        float left
        font-size 16px
        line-height 35px
        width 100%
        text-align left
        padding 0px 5px 0px 0px
        &.ioption
            cursor pointer
            line-height 35px
            padding-left 15px
            position relative
            input[type="radio"],input[type="checkbox"]
                left 0
                margin 0
                padding 0
                position absolute
                top 12px
        &.ck
            font-size 13px
            line-height 16px
            margin-left 90px
            width auto
            input[type="checkbox"]
                top 2px
    input[type="text"],input[type="email"],input[type="tel"],input[type="date"],input[type="url"],input[type="password"],select,input[type="search"],input[type="time"]
        background-color #fff
        border 1px solid #999
        border-radius 10px
        font 16px/30px 'Maven Pro', sans-serif
        height 30px
        padding 2px 10px
        width 250px
        outline 0
        box-sizing border-box
        &.error
            background-color #fcdddd
            border 1px solid #fc7d7d
    textarea
        background-color #fff
        border 1px solid #999
        border-radius 10px
        font 16px/19px 'Maven Pro', sans-serif
        height 70px
        padding 7px 10px
        width 250px
        outline 0
        box-sizing border-box
        &.error
            background-color #fcdddd
            border 1px solid #fc7d7d
.btn
    background #333
    border none
    border-radius 6px
    color #fff
    cursor pointer
    font 17px/30px 'Maven Pro', sans-serif
    margin 0 0 0 89px
    padding 0px 20px
    &:hover
        background #8eb602